<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EstForge.Core.ViewModels;assembly=EstForge.Core"
             xmlns:models="clr-namespace:EstForge.Data.Models;assembly=EstForge.Data"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="EstForge.MAUI.MainPage"
             x:DataType="vm:MainViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Gray100}">

    <Grid RowDefinitions="Auto,Auto,*">

        <!-- Header -->
        <Frame Grid.Row="0"
               BackgroundColor="{StaticResource Primary}"
               CornerRadius="0"
               Padding="20"
               HasShadow="True">
            <VerticalStackLayout>
                <Label Text="{Binding CompanyName}"
                       TextColor="White"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                <Label Text="Gestione Preventivi"
                       TextColor="White"
                       FontSize="14"
                       Opacity="0.9"
                       HorizontalOptions="Center"
                       Margin="0,5,0,0"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Search Bar -->
        <Frame Grid.Row="1"
               BackgroundColor="White"
               CornerRadius="0"
               Padding="15,10"
               HasShadow="False">
            <Grid ColumnDefinitions="*,Auto">
                <SearchBar Grid.Column="0"
                          Placeholder="Cerca preventivi..."
                          Text="{Binding SearchText}"
                          SearchCommand="{Binding SearchCommand}"
                          BackgroundColor="{StaticResource Gray100}"
                          PlaceholderColor="{StaticResource Gray500}"/>

                <Button Grid.Column="1"
                        Text="Nuovo"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToCreateCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="10"
                        Padding="20,10"
                        Margin="10,0,0,0"/>
            </Grid>
        </Frame>

        <!-- Preventivi List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}"
                     RefreshColor="{StaticResource Primary}">

            <CollectionView ItemsSource="{Binding Preventivi}"
                           SelectionMode="Single"
                           SelectedItem="{Binding SelectedPreventivo}">

                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Spacing="10">
                        <Label Text="ðŸ“‹"
                               FontSize="60"
                               HorizontalOptions="Center"/>
                        <Label Text="Nessun preventivo trovato"
                               Style="{StaticResource SubtitleLabel}"
                               HorizontalOptions="Center"/>
                        <Button Text="Crea il primo preventivo"
                                BackgroundColor="{StaticResource Primary}"
                                Margin="0,20,0,0"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Preventivo">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Elimina"
                                              BackgroundColor="{StaticResource Error}"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=DeletePreventivoCommand}"
                                              CommandParameter="{Binding Id}"/>
                                    <SwipeItem Text="PDF"
                                              BackgroundColor="{StaticResource Primary}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Style="{StaticResource CardFrame}"
                                   Margin="15,10">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                      ColumnDefinitions="*,Auto">

                                    <!-- Numero Preventivo -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}">
                                        <Label.Text>
                                            <MultiBinding StringFormat="Preventivo {0}/{1}">
                                                <Binding Path="Numero" />
                                                <Binding Path="Anno" />
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>

                                    <!-- Stato -->
                                    <Frame Grid.Row="0" Grid.Column="1"
                                           BackgroundColor="{StaticResource Gray200}"
                                           CornerRadius="10"
                                           Padding="10,5"
                                           HasShadow="False">
                                        <Label Text="{Binding Stato, StringFormat='{}{0:U}'}"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}"/>
                                    </Frame>

                                    <!-- Cliente -->
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding Cliente.NomeRagioneSociale}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           Margin="0,5,0,0"/>

                                    <!-- Oggetto -->
                                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding Oggetto}"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray600}"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"
                                           Margin="0,5,0,0"/>

                                    <!-- Totale e Data -->
                                    <HorizontalStackLayout Grid.Row="3" Grid.Column="0"
                                                          Spacing="10"
                                                          Margin="0,10,0,0">
                                        <Label TextColor="{StaticResource Gray500}"
                                               FontSize="12"
                                               VerticalOptions="Center">
                                            <Label.Text>
                                                <Binding Path="CreatoIl" StringFormat="{}{0:dd/MM/yyyy}" />
                                            </Label.Text>
                                        </Label>
                                    </HorizontalStackLayout>

                                    <Label Grid.Row="3" Grid.Column="1"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}"
                                           VerticalOptions="Center"
                                           Margin="0,10,0,0">
                                        <Label.Text>
                                            <Binding Path="Totale" StringFormat="â‚¬ {0:N2}" />
                                        </Label.Text>
                                    </Label>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          Color="{StaticResource Primary}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>
    </Grid>

</ContentPage>
