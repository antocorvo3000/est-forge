<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EstForge.Core.ViewModels;assembly=EstForge.Core"
             x:Class="EstForge.MAUI.MainPage"
             x:DataType="vm:MainViewModel"
             Title="EST-FORGE"
             BackgroundColor="White">

    <Grid Padding="20">
        <VerticalStackLayout Spacing="10" VerticalOptions="Center">
            <Label Text="EST-FORGE"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2563EB"/>

            <Label Text="{Binding CompanyName}"
                   FontSize="20"
                   HorizontalOptions="Center"/>

            <Label Text="{Binding FilteredPreventivi.Count, StringFormat='Preventivi: {0}'}"
                   FontSize="18"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>

            <Button Text="Carica Dati"
                    Command="{Binding RefreshCommand}"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    Margin="0,20,0,0"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              Color="#2563EB"
                              HeightRequest="50"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
